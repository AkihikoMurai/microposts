
<h1>
    <%= gravatar_for @user %>
    <%= @user.name %>
</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            名前：
            <span class="label label-info"><%= @user.name %></span>
        </div>
        <div class="col-sm-4">
            メールアドレス：
            <%= @user.email %>
        </div>
        <div class="col-sm-4">
            地域：
            <%= @user.location %>
        </div>
    </div>
</div>    
        