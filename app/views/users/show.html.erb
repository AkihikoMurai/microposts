

<div class="row">
    <aside class="col-md-4">
        <section class="user-info">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>    
            </h1>
        </section>    
    </aside>
    <div class="col-md-8">
        <%= render 'follow_form' if logged_in? %>
        <% if @user.microposts.any? %>
            <h3>Microposts (<%= @user.microposts.count %>)</h3>
            <ol class="microposts">
                <%= render @microposts %>
            </ol>
        <% end %>    
    </div>
</div>

<%= link_to 'following', followings_user_path(@user) %>
<%=  link_to 'follower', followers_user_path(@user) %>

<h1 class="text-left">プロフィール</h1>
<div class="text-left">名前：<%= @user.name %></div>
<div class="text-left">メールアドレス：<%= @user.email %></div>
<div class="text-left">地域：<%= @user.location %></div>
